    "db:reset:prisma": "node scripts/orm-helper.js db:reset prisma",
    "db:up:typeorm": "node scripts/orm-helper.js db:up typeorm",
    "db:down:typeorm": "node scripts/orm-helper.js db:down typeorm",
    "db:reset:typeorm": "node scripts/orm-helper.js db:reset typeorm",
    "db:up:sequelize": "node scripts/orm-helper.js db:up sequelize",
    "db:down:sequelize": "node scripts/orm-helper.js db:down sequelize",
    "db:reset:sequelize": "node scripts/orm-helper.js db:reset sequelize",
    "db:up:drizzle": "node scripts/orm-helper.js db:up drizzle",
    "db:down:drizzle": "node scripts/orm-helper.js db:down drizzle",
    "db:reset:drizzle": "node scripts/orm-helper.js db:reset drizzle",
    "db:down:all": "node scripts/orm-helper.js db:down all",
    "dev:prisma": "node scripts/orm-helper.js dev prisma",
    "dev:typeorm": "node scripts/orm-helper.js dev typeorm",
    "dev:sequelize": "node scripts/orm-helper.js dev sequelize",
    "dev:drizzle": "node scripts/orm-helper.js dev drizzle",
    "dev:all": "node scripts/orm-helper.js dev all",
