  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^25.0.8",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "husky": "^8.0.0",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
